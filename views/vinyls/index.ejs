<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>vinyl shuffle</title>
</head>

<body>
    <h1>vinyl List</h1>
    <a href="/vinyls/new">
        <button type="submit">Create a Vinyl</button>
    </a>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Release Year</th>
                <th>Band</th>

            </tr>
        </thead>
        <tbody>
            <% vinyls.forEach((v) => { %>
                <tr>

                    <td>
                        <a href="/vinyls/<%=v.id%>">
                            <%= v.title %>
                        </a>
                    </td>
                    <td>
                        <%= v.releaseYear %>
                    </td>
                    <td>
                        <%= v.band %>
                    </td>

                    <td>
                        <form action="/vinyls/<%=v.id %>?_method=DELETE" class="delete-form" method="POST">
                            <button type="submit">delete</button>
                        </form>
                        <a href="/vinyls/<%= v.id %>/edit">
                            <button type="submit">Edit vinyl</button></a>


                    </td>

                </tr>

                <% }) %>


        </tbody>
    </table>
    <ul class="right">
        <li>
            <% if (user) { %>
                <a href="/logout">
                    <button type="submit">Logout</button></a>
                <% } else { %>
                    <a href="/auth/google">
                        <button type="submit">Login</button>
                    </a>
                    <% } %>
        </li>
    </ul>
</body>

