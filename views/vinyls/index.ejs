<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>vinyl shuffle</title>
</head>

<body>
    <h1>vinyl List</h1>
    <a href="/vinyls/new">
        <button type="submit">Create a Vinyl</button>
    </a>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Release Year</th>
                <th>Band</th>

            </tr>
        </thead>
        <tbody>
            <% vinyls.forEach((v) => { %>
                <tr>

                    <td>
                        <a href="/vinyls/<%=v.id%>">
                            <%= v.title %>
                        </a>
                    </td>
                    <td>
                        <%= v.releaseYear %>
                    </td>
                    <td>
                        <%= v.band %>
                    </td>

                    <td>
                        <form action="/vinyls/<%=v.id %>?_method=DELETE" class="delete-form" method="POST">
                            <button type="submit">delete</button>
                        </form>
                        <a href="/vinyls/<%= v.id %>/edit">
                            <button type="submit">Edit vinyl</button></a>


                    </td>

                </tr>

                <% }) %>


        </tbody>
    </table>
    <ul class="right">
        <li>
            <% if (user) { %>
                <a href="/logout">
                    <button type="submit">Logout</button></a>
                <% } else { %>
                    <a href="/auth/google">
                        <button type="submit">Login</button>
                    </a>
                    <% } %>
        </li>
    </ul>
</body>
<style>
    body,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Montserrat", sans-serif
    }
    
    .w3-row-padding img {
        margin-bottom: 12px
    }
    /* Set the width of the sidebar to 120px */
    
    .w3-sidebar {
        width: 120px;
        background: #222;
    }
    /* Add a left margin to the "page content" that matches the width of the sidebar (120px) */
    
    #main {
        margin-left: 120px
    }
    /* Remove margins from "page content" on small screens */
    
    @media only screen and (max-width: 600px) {
        #main {
            margin-left: 0
        }
    }
</style>

<body class="w3-black">

</html>